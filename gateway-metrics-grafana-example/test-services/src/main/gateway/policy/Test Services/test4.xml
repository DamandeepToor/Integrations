<wsp:Policy xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy" xmlns:L7p="http://www.layer7tech.com/ws/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="********************************************************************************************************************"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="* Policy runs successfully without a routing assertion."/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="********************************************************************************************************************"/>
        </L7p:CommentAssertion>
        <L7p:SetVariable>
            <L7p:Expression><![CDATA[this is a test]]></L7p:Expression>
            <L7p:VariableToSet stringValue="test"/>
        </L7p:SetVariable>
        <L7p:HardcodedResponse>
            <L7p:ResponseBody><![CDATA[Policy Successful. No routing]]></L7p:ResponseBody>
            <L7p:ResponseContentType stringValue="text/plain; charset=UTF-8"/>
        </L7p:HardcodedResponse>
    </wsp:All>
</wsp:Policy>
